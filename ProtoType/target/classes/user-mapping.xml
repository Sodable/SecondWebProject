<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="member">
	
	<insert id="insertMember" parameterType="member">
		insert into member 
		values(#{id},#{password},#{name},#{tel},#{email})
	</insert>
	
	<insert id="insertMemberInfo" parameterType="member">
		insert into member_info(id)
		values(#{id})
	</insert>
	
	<insert id="updateMemberInfo" parameterType="memberinfo">
		update member_info 
		set nickname = #{nickname}, gender = #{gender}, age = #{age}, 
		locale = #{locale}, job = #{job}, job_locale = #{locale}
		where id = #{id}
	</insert>

	<select id="selectMemberInfo" resultType="memberinfo">
		select * from member_info where id = #{id}
	</select>
	
	<select id="loginMember" parameterType="member" resultType="member">
	select * from member where password= #{password} and id = #{id}
	</select>
</mapper>  

